{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@pr-gram/config": ["../../packages/config/src"],
      "@pr-gram/database": ["../../packages/database/src"],
      "@pr-gram/shared": ["../../packages/shared/src"],
      "@pr-gram/i18n": ["../../packages/i18n/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}